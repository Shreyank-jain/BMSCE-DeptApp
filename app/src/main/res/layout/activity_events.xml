<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.halo.bmsce.Activity_Contest"
    android:background="@color/bluecoral">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/workshop_headerc"
        android:background="@color/darkgrad">

        <RelativeLayout
            android:id="@+id/workshop_logoc"
            android:layout_width="100dp"
            android:layout_marginTop="15dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menu_background">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/remainders"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Events"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/coral"
            android:layout_below="@+id/workshop_logoc"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/all_liste"/>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>