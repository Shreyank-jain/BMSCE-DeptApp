<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@color/transparent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@drawable/dashboard_item1_background"
        android:shadowColor="@color/transparent"
        android:shadowDx="1.5"
        android:shadowDy="1.4"
        android:shadowRadius="1.8">

        <ImageView
            android:layout_marginLeft="15dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/transparent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/material_icon"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/details_layout"
            android:layout_toRightOf="@id/material_icon">

            <TextView
                android:id="@+id/material_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:text="Unit 1 PPT"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/material_date"
                android:layout_below="@id/material_name"
                android:layout_centerHorizontal="true"
                android:text="12-02-2020"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/coral"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="1"
                android:id="@+id/material_link"/>


        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>



