<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.halo.bmsce.Activity_Classes"
    android:background="@color/gradStart">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/workshop_header"
        android:background="@color/darkgrad">

        <RelativeLayout
            android:id="@+id/workshop_logo"
            android:layout_width="100dp"
            android:layout_marginTop="15dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menu_background">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/classes"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classes"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/coral"
            android:layout_below="@+id/workshop_logo"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/all_classes"/>

    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_class"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        app:fabSize="normal"
        app:backgroundTint="@color/bluecoral"
        app:elevation="6dp"
        android:src="@drawable/ic_add"
        android:scaleType="center"
        app:maxImageSize="64dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/join_class"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        app:fabSize="normal"
        app:backgroundTint="@color/bluecoral"
        app:elevation="6dp"
        android:src="@drawable/ic_add"
        android:scaleType="center"
        app:maxImageSize="64dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>